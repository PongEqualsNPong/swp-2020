<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Refused">
    <TextView
            android:text="@string/text_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_incorrect" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintHorizontal_bias="0.49"/>
    <EditText
            android:layout_width="206dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/field_enter_code" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/text_incorrect"
            android:layout_marginTop="112dp" app:layout_constraintHorizontal_bias="0.492"/>
    <Button
            android:text="@string/button_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_try_again" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/field_enter_code"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.178"/>
    <TextView
            android:text="322"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code_numbers"
            app:layout_constraintTop_toBottomOf="@+id/text_incorrect" android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>