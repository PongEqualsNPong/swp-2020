<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CommentDetailsActivity">

    <Button
        android:id="@+id/comment_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintBottom_toTopOf="@+id/comment_set_restricted"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/comment_set_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment_viewall_button"
        android:layout_toRightOf="@+id/comment_viewall_button"
        android:text="Set Public"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/comment_set_restricted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Restricted"
        app:layout_constraintBottom_toTopOf="@+id/comment_set_public"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/button_edit_comment_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_edit_comment_and_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_edit_comment_save"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        tools:layout_editor_absoluteX="-37dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Username" />

            <EditText
                android:id="@+id/et_username"
                android:layout_height="60dp"
                android:enabled="false"
                android:padding="3dip"
                android:text="Username" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/email"
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="Email" />

            <EditText
                android:id="@+id/et_email"
                android:layout_height="match_parent"
                android:enabled="false"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Rolle" />

            <EditText
                android:id="@+id/et_role"
                android:layout_height="match_parent"
                android:enabled="false"
                android:padding="3dip"
                android:text="Rolle" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Vorname" />

            <EditText
                android:id="@+id/et_first_name"
                android:enabled="false"
                android:padding="3dip"
                android:text="Vorname" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Nachname" />

            <EditText
                android:id="@+id/et_last_name"
                android:enabled="false"
                android:padding="3dip"
                android:text="Nachname" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Matrikelnummer" />

            <EditText
                android:id="@+id/et_student_number"
                android:enabled="false"
                android:padding="3dip"
                android:text="Matrikelnummer" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Studiengang" />

            <EditText
                android:id="@+id/et_course"
                android:enabled="false"
                android:padding="3dip"
                android:text="Studiengang" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="PrÃ¼fungsordnung" />

            <EditText
                android:id="@+id/et_ex_regulations"
                android:enabled="false"
                android:padding="3dip"
                android:text="Pruefungsordnung" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Comment" />

            <EditText
                android:id="@+id/et_comment_content"
                android:enabled="false"
                android:padding="3dip"
                android:text="Content" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Posted Date" />

            <EditText
                android:id="@+id/et_comment_date"
                android:enabled="false"
                android:padding="3dip"
                android:text="Posted Date" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Restricted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restricted" />

            <Switch
                android:id="@+id/switch_comment_restricted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is Restricted ?" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edited" />

            <Switch
                android:id="@+id/switch_comment_edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is Edited ?" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>