<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CommentDetailsActivity">

    <Button
        android:id="@+id/comment_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/comment_set_restricted"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/button_edit_comment_and_cancel"
        app:layout_constraintTop_toBottomOf="@+id/table_comment_layout"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/comment_set_public"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Set Public"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_comment_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/table_comment_layout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/comment_set_restricted"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Set Restricted"
        app:layout_constraintBottom_toBottomOf="@+id/comment_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/table_comment_layout"
        app:layout_constraintTop_toBottomOf="@+id/comment_set_public"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_edit_comment_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_comment_and_cancel"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/button_edit_comment_and_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/table_comment_layout"
        app:layout_constraintVertical_bias="0.122" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Poster:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Comment:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="0dp">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Username" />

            <TextView
                android:id="@+id/et_username"
                android:enabled="false"
                android:padding="3dip"
                android:text="Username" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/email"
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="Email" />

            <TextView
                android:id="@+id/et_email"
                android:layout_height="match_parent"
                android:enabled="false"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Rolle" />

            <TextView
                android:id="@+id/et_role"
                android:layout_height="match_parent"
                android:enabled="false"
                android:padding="3dip"
                android:text="Rolle" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Vorname" />

            <TextView
                android:id="@+id/et_first_name"
                android:enabled="false"
                android:padding="3dip"
                android:text="Vorname" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Nachname" />

            <TextView
                android:id="@+id/et_last_name"
                android:enabled="false"
                android:padding="3dip"
                android:text="Nachname" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Matrikelnummer" />

            <TextView
                android:id="@+id/et_student_number"
                android:enabled="false"
                android:padding="3dip"
                android:text="Matrikelnummer" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Studiengang" />

            <TextView
                android:id="@+id/et_course"
                android:enabled="false"
                android:padding="3dip"
                android:text="Studiengang" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="PrÃ¼fungsordnung" />

            <TextView
                android:id="@+id/et_ex_regulations"
                android:enabled="false"
                android:padding="3dip"
                android:text="Pruefungsordnung" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/table_comment_layout"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="3dip"
                android:text="Posted Date" />

            <TextView
                android:id="@+id/et_comment_date"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:enabled="false"
                android:padding="3dip"
                android:text="Posted Date" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switch_comment_edited"
                android:padding="3dip"
                android:text="Edited" />

            <Switch
                android:id="@+id/switch_comment_restricted"
                android:padding="3dip"
                android:text="Restricted" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:padding="3dip"
                android:text="Comment" />

            <EditText
                android:id="@+id/et_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:padding="3dip"
                android:text="Content" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>