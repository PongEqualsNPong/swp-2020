<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/holo_blue_light">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="150dp"
            android:background="@android:color/holo_green_light"
            android:id="@+id/pd_top"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0">
        <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="30dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.202" app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintVertical_bias="0.86">
            <EditText
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pd_type"
                    android:layout_gravity="center"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="30dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.797" app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintVertical_bias="0.86">
            <EditText
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pd_status"
                    android:layout_gravity="center"
            />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/pd_top"
            app:layout_constraintVertical_bias="0.046" android:id="@+id/cardView">

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:id="@+id/pd_title"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/pd_top"
            app:layout_constraintVertical_bias="0.445">
        <EditText android:layout_height="match_parent" android:layout_width="match_parent"
                  android:id="@+id/pd_description"
        android:layout_gravity="top"/>



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>