            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.appointment.CreateAppointmentActivity"/>
        <activity
                android:name=".activities.appointment.AppointmentDetailsActivity"
                android:label="Appointment"/>
        <activity android:name=".activities.project.OpenMyProjectsActivity"/>
