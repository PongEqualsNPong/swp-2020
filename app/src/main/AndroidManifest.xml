        <activity android:name=".activities.project.CreateProjectActivity"/>
        <activity android:name=".activities.project.CreateProjectActivity2"/>
        <activity android:name=".activities.comment.CommentDetailsActivity"/>
        <activity
                android:name=".activities.general.WelcomeActivity"
                android:label="Welcome"/> <!-- <activity android:name=".Login"> -->
        <meta-data
                android:name="com.google.android.actions"
                android:resource="@xml/login2"/>

        <activity
                android:name=".activities.general.LoginActivity"
                android:label="Login"
                android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.user.CheckForInviteActivity"/>
        <activity
                android:name=".activities.project.OpenAllProjectsActivity"
                android:label="Projects"/>
